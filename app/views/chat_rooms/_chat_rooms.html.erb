<div class="mb-3">
  <%= link_to new_chat_room_path, class: "btn btn-primary" do %>
    Create a Chat Room
  <% end %>
</div>

<% if @chat_rooms.present? %>
  <nav class="nav flex-column">
    <% @chat_rooms.each do |chat_room| %>
      <%= link_to chat_room.name, chat_room_path(chat_room), class: "nav-link" %>
    <% end %>
  </nav>
<% else %>
  <div class="text-muted">
    The are no chat rooms
  </div>
<% end %>
